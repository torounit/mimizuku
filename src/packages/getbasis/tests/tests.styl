@import '../src/stylus/core/core';
@import 'api/api';

+bs-test('[function] bs-bp-prefix()') {
	bs-assert-equals('-', bs-bp-prefix('sm'));
	bs-assert-equals('--md', bs-bp-prefix('md'));
	bs-assert-equals('--lg', bs-bp-prefix('lg'));
}

+bs-test('[function] bs-gcd()') {
	bs-assert-equals(2, bs-gcd(2, 12));
	bs-assert-equals(4, bs-gcd(4, 12));
	bs-assert-equals(1, bs-gcd(1, 12));
	bs-assert-equals(1, bs-gcd(5, 12));
}

+bs-test('[function] bs-px2rem()') {
	rem = bs-px2rem(16px, 16px);
	bs-assert-equals(1rem, rem);

	rem = bs-px2rem(16px, 10px);
	bs-assert-equals(1.6rem, rem);
}

+bs-test('[function] bs-rem2px()') {
	rem = bs-rem2px(1rem, 16px);
	bs-assert-equals(16px, rem);

	rem = bs-rem2px(1rem, 10px);
	bs-assert-equals(10px, rem);
}

+bs-test('[function] bs-strip-unit()') {
	bs-assert-equals(1, bs-strip-unit(1rem));
	bs-assert-equals(10, bs-strip-unit(10px));
}
