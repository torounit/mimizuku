.{bs-prefix}c-media {
  display: table;
  width: 100%;

  &__figure {
    display: table-cell;
    vertical-align: top;
    margin-right: 0;
    bs-padding-right(1);
  }

  &__body {
    display: table-cell;
    vertical-align: top;
    width: 100%;
  }

  &--middle {
    > .{bs-prefix}c-media__figure,
    > .{bs-prefix}c-media__body {
      vertical-align: middle;
    }

    .{bs-prefix}c-media__figure {
      margin-left: 0;
      bs-padding-left(1);
    }
  }

  &--reverse {
    text-align: left;
    direction: rtl;

    > .{bs-prefix}c-media__body {
      text-align: left;
      direction: ltl;
    }
  }
}
