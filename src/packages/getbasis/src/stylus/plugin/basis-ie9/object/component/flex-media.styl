.{bs-prefix}c-flex-media {
  +bs-bp-md-min() {
	  display: table;
	  width: 100%;
  }

  &__figure {
    +bs-bp-md-min() {
	    display: table-cell;
	    vertical-align: top;
	    margin-right: 0;
      bs-padding-right(1);
    }
  }

  &__body {
    +bs-bp-md-min() {
	    display: table-cell;
	    vertical-align: top;
	    width: 100%;
    }
  }

  &--reverse {
    +bs-bp-md-min() {
	    text-align: left;
	    direction: rtl;

	    > .{bs-prefix}c-media__body {
	      text-align: left;
	      direction: ltl;
	    }
		}
  }
}
