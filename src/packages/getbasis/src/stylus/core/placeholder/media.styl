$bs-media {
  display: flex;

  &__figure {
    bs-margin(0, 1, 0, 0);
    flex: none;
    bs-background-image-cover();

    > * {
      vertical-align: top;
      margin-top: bs-between-lines;
    }
  }

  &__body {
    flex: 1;
  }
}
