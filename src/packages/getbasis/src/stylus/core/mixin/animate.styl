//
// Bounce vertical
//
// @param   length             px        bounce size
// @param   second|milisecond  delay: 0  animate time
//
bs-bounce-vertical(px, delay = 0) {
  keyframe-name = bs-bounce-vertical- + px;
  position: relative;
  animation: keyframe-name delay;

  @keyframes {keyframe-name} {
    0%   { top: (px * -1); }
    25%  { top: px; }
    50%  { top: (px / 2 * -1); }
    75%  { top: (px / 2); }
    100% { top: 0; }
  }
}

//
// Shake vertical
//
bs-shake-vertical() {
  bs-bounce-vertical(4px, .5s);
}

//
// Vibrate vertical
//
bs-vibrate-vertical() {
  bs-bounce-vertical(2px, .2s);
}

//
// Bounce horizontal
//
// @param   length             px        bounce size
// @param   second|milisecond  delay: 0  animate time
//
bs-bounce-horizontal(px, delay = 0) {
  keyframe-name = bs-bounce-horizontal- + px;
  position: relative;
  animation: keyframe-name delay;

  @keyframes {keyframe-name} {
    0%   { left: (px * -1); }
    25%  { left: px; }
    50%  { left: (px / 2 * -1); }
    75%  { left: (px / 2); }
    100% { left: 0; }
  }
}

//
// Shake horizontal
//
bs-shake-horizontal() {
  bs-bounce-horizontal(4px, .5s);
}

//
// Vibrate horizontal
//
bs-vibrate-horizontal() {
  bs-bounce-horizontal(2px, .2s);
}

//
// Bounce scale
//
// @param   float              px        bounce size
// @param   second|milisecond  delay: 0  animate time
//
bs-bounce-scale(float, delay = 0) {
  suffix = bs-strip-unit(percentage(float));
  keyframe-name = bs-bounce-scale- + suffix;
  animation: keyframe-name delay ease-out;
  scale = (float - 1);

  @keyframes {keyframe-name} {
    0%   { transform: scale(1); }
    25%  { transform: scale(float); }
    50%  { transform: scale(1); }
    75%  { transform: scale((1 + (float - 1) / 2)); }
    100% { transform: scale(1); }
  }
}

//
// Shake scale
//
bs-shake-scale() {
  bs-bounce-scale(1.2, .5s);
}

//
// Vibrate scale
//
bs-vibrate-scale() {
  bs-bounce-scale(1.1, .2s);
}

//
// Extend the underline from the center.
// This mixin use the pseudo-elements.
//
bs-extend-underline() {
  position: absolute;
  bottom: 0;
  left: 50%;
  display: block;
  content: '';
  width: 0;
  height: 1px;
  transition: width bs-transition-duration bs-transition-function-timing;
  transform: translateX(-50%);
  background-color: bs-color-text;
}
