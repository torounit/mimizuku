bs-drawer-width            ?= (bs-base-line-height * 10);
bs-drawer-max-width        ?= 80%;
bs-drawer-background-color ?= bs-light(bs-color-black);
bs-drawer-z-index          ?= 10;

.{bs-prefix}c-drawer {
  position: relative;

  &__body {
    position: absolute;
    z-index: bs-drawer-z-index;
    top: 0;
    left: 0;
    bottom: 0;
    transform: translateX(-100%);
    transition: transform bs-transition-duration bs-transition-function-timing;
    width: bs-drawer-width;
    max-width: bs-drawer-max-width;
    background-color: bs-drawer-background-color;
    overflow-y: auto;

    &--fixed {
      position: fixed;
    }

    &[aria-expanded="true"] {
      transform: translateX(0);
    }
  }

  &__btn {
    position: relative;
    z-index: (bs-drawer-z-index + 1);
  }

  &__submenu {
    height: 0;
    overflow: hidden;

    [aria-expanded="true"] > & {
      height: auto;
      overflow: visible;
    }
  }

  &__toggle {
    cursor: pointer;
  }
}
